<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>grammar</groupId>
  <artifactId>grammar</artifactId>
  <version>1.0</version>
  <build>
    <resources>
      <resource>
        <directory>src/test/resources/scripts</directory>
        <excludes>
          <exclude>cmdstan/**</exclude>
          <exclude>cmdstan-2.19.1/**</exclude>
          <exclude>cmdstan-2.16.0/**</exclude>
        </excludes>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/resources/scripts/cmdstan*</directory>
        <excludes>
          <exclude>**</exclude>
          <exclude>*</exclude>
        </excludes>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.antlr</groupId>
        <artifactId>antlr4-maven-plugin</artifactId>
        <version>4.7.1</version>
        <executions>
          <execution>
            <id>antlr-template3</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>antlr4</goal>
            </goals>
            <configuration>
              <arguments>
                <argument>-package</argument>
                <argument>grammar</argument>
              </arguments>
              <visitor>true</visitor>
              <listener>true</listener>
              <includes>Template3.g4</includes>
              <sourceDirectory>template/</sourceDirectory>
              <outputDirectory>target/generated-sources/antlr/java/grammar/</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>antlr-template2</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>antlr4</goal>
            </goals>
            <configuration>
              <arguments>
                <argument>-package</argument>
                <argument>grammar</argument>
              </arguments>
              <visitor>true</visitor>
              <listener>true</listener>
              <includes>Template2.g4</includes>
              <sourceDirectory>template/</sourceDirectory>
              <outputDirectory>target/generated-sources/antlr/java/grammar/</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>antlr-stan-data</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>antlr4</goal>
            </goals>
            <configuration>
              <arguments>
                <argument>-package</argument>
                <argument>grammar</argument>
              </arguments>
              <includes>Data.g4</includes>
              <visitor>true</visitor>
              <listener>true</listener>
              <sourceDirectory>stan/</sourceDirectory>
              <outputDirectory>target/generated-sources/antlr/java/grammar/</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>antlr-stan</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>antlr4</goal>
            </goals>
            <configuration>
              <arguments>
                <argument>-package</argument>
                <argument>grammar</argument>
              </arguments>
              <includes>Stan.g4</includes>
              <visitor>true</visitor>
              <listener>true</listener>
              <sourceDirectory>stan/</sourceDirectory>
              <outputDirectory>target/generated-sources/antlr/java/grammar/</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>antlr-python</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>antlr4</goal>
            </goals>
            <configuration>
              <arguments>
                <argument>-package</argument>
                <argument>grammar</argument>
              </arguments>
              <includes>Python3.g4</includes>
              <visitor>true</visitor>
              <listener>true</listener>
              <sourceDirectory>python3/</sourceDirectory>
              <outputDirectory>target/generated-sources/antlr/java/grammar/</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>bedatadriven</id>
      <name>bedatadriven public repo</name>
      <url>https://nexus.bedatadriven.com/content/groups/public/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>LATEST</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
</project>
